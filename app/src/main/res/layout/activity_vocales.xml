<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Vocales">

<TextView
    android:id="@+id/instruccionTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Une los puntos con tu dedo para formar la vocal"
    android:textSize="24sp"
    android:textColor="#000000"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:gravity="center"/>

<com.example.logintarea.VocalTraceView
    android:id="@+id/vocalTraceView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/instruccionTextView"
    android:layout_marginTop="20dp"/>

</RelativeLayout>